# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 4
max_line_length = 120

[*.md]
# double whitespace at end of line
# denotes a line break in Markdown
indent_size = 2
trim_trailing_whitespace = false

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.rs]
max_line_length = 100

[Makefile]
indent_style = tab

# See also: Google's style guide: https://github.com/google/styleguide/blob/gh-pages/docguide/style.md
