{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "just serve",
            "type": "shell",
            "command": "just serve",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                    "focus": true,      // Controls whether the terminal is taking input focus or not. Default is false.
                    "reveal": "always", // The terminal panel is always brought to front. This is the default.
                    "panel": "shared"   // The terminal is shared and the output of other task runs are added to the same terminal.
                }
        }
    ]
}
